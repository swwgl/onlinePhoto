<!DOCTYPE html>
<html lang='zh-cn'>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title>在线相册</title>

  <!-- Bootstrap -->
  <link href='/css/bootstrap.css' rel='stylesheet'>

  <!--[if lt IE 9]>
      <script src='/js/html5shiv.min.js'></script>
      <script src='/js/respond.min.js'></script>
    <![endif]-->
  <style>
    .items {
      display: flex;
      flex-wrap: wrap;
      width: 80%;
      margin: auto;
      background-color: #ccc;

    }

    .item {
      width: 200px;
      text-align: center;
      margin: 0 10px;

    }

    .item img {
      width: 200px;
    }

    div.box {
      width: 1000px;
      margin: 70px auto;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
          data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">在线相册</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/pic/upload">上传图片<span class="sr-only">(current)</span></a></li>
          <li><a href="/album/create">新建相册</a></li>

        </ul>


      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="box">
    <h2>请输入相册的名称:</h2>
    <form class="form-inline" action="/album/create" method="post" onsubmit="return false;">
      <div class="form-group">
        <label for="dir">相册名</label>
        <input type="text" class="form-control" id="dir" name="dirName" placeholder="请输入相册名称">
      </div>
      <button type="button" class="btn btn-success">新建</button>
    </form>
  </div>
  <script src='/js/jquery.min.js'></script>
  <script src='/js/bootstrap.js'></script>

  <script>
    // 点击提交发送请求之前的检查
    $('button.btn').on("click", function () {
      // 检查服务器中有没有存在输入的文件夹名称
      var dirName = $('input[name=dirName]').val().trim();
      if (dirName == "") {
        alert("相册名不能为空!");
        return;
      }
      // 发送Ajax请求检查服务器是否存在该名称的文件夹
      $.ajax({
        url: "/album/check",
        method: "post",
        data: {
          dirName: dirName
        },
        success: function (res) {
          // console.log(res);
          if (res.status != "success") {
            alert(res.msg);
            return;
          }
          // 创建成功,跳转到首页
          location.href = "/";

        }
      })
    })
  </script>
</body>

</html>