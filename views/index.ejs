<!DOCTYPE html>
<html lang='zh-cn'>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title>在线相册</title>

  <!-- Bootstrap -->
  <link href='/css/bootstrap.css' rel='stylesheet'>

  <!--[if lt IE 9]>
      <script src='/js/html5shiv.min.js'></script>
      <script src='/js/respond.min.js'></script>
    <![endif]-->
  <style>
    .items {
      display: flex;
      flex-wrap: wrap;
      width: 80%;
      margin: auto;
      background-color: #ccc;
    }

    .item {
      width: 200px;
      text-align: center;
      margin: 0 8px;

    }

    .item img {
      width: 200px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
          data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">在线相册</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/pic/upload">上传图片<span class="sr-only">(current)</span></a></li>
          <li><a href="/album/create">新建相册</a></li>

        </ul>


      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <!-- 展示区域 -->
  <div class="items">
    <% for(var i=0;i<albums.length;i++){ %>
    <div class="item">
      <a href="/pic/show.dirName=<%= albums[i] %>"><img src="/img/floder1.png"></a>
      <h4><%= albums[i] %></h4>
      <a href="/album/deletealbum/<%= albums[i] %>" onclick="del(this)">删除</a>
    </div>
    <% } %>
  </div>

  <script>
    function del(ele) {
      event.preventDefault();
      var f = confirm("确定要删除该相册码?")
      if (!f) {
        return;
      }
      location.href = $(ele).attr("href");
    }
  </script>

  <script src='/js/jquery.min.js'></script>
  <script src='/js/bootstrap.js'></script>

</body>

</html>